This program is used to reverse the entered string .

#include<iostream>
#include<string>
using namespace std;
string reverse(string s)
{
    string b="";
    for(int i=0;i<s.length();i++)
    {
        b=s[i]+b;
    }
    return b;
}
int main()
{
    string a;
    cout<<"Enter the string you want to reverse : ";
    cin>>a;
    cout<<"The reversed string is : "<<reverse(a)<<"\n";
    return 0;
}
